{% extends "templates/base.twig" %}

{% block css1 %}"/assets/styles/payment.css"{% endblock %}

{% block title1 %}CENTRAL MARKET{% endblock %}

{% block body1 %}

<h1>CENTRAL MARKET</h1>

<main class="form-payment">
    <form action="/redirect" method="POST">
        <h1 class="h3 mb-3 fw-normal"> Enter your Details to continue with the Payment</h1>
        <div class="form-floating">
            <input type="password" class="form-control" id="floatingPassword" placeholder="+91 9999999999" name="contactnumber">
            <label for="floatingPassword">Contact Number</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="floatingPassword" placeholder="1234 5678 435678" name="cardnumber">
            <label for="floatingPassword">Card Number</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="floatingPassword" placeholder="MM/YYYY" name="expiry">
            <label for="floatingPassword">Expiry</label>
        </div>
        <button class="w-100 btn btn-lg btn-dark" type="submit">PAY</button>
    </form>
</main>

{% endblock %}